<% content_for :title, "API Keys for #{@user.full_name}" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">API Keys</h1>
      <p class="mt-1 text-sm text-gray-500">
        Manage API keys for <%= @user.full_name %> (<%= @user.email %>)
      </p>
    </div>
    <div class="flex items-center space-x-4">
      <%= link_to "â† Back to User", admin_user_path(@user), class: "text-blue-600 hover:text-blue-800" %>
      <%= link_to "Create API Key", new_admin_user_user_api_key_path(@user), class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
    </div>
  </div>

  <!-- API Keys List -->
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <% if @api_keys.any? %>
      <ul class="divide-y divide-gray-200">
        <% @api_keys.each do |api_key| %>
          <li>
            <div class="px-4 py-4 flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                    <svg class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-3a1 1 0 011-1h2.586l6.414-6.414a6 6 0 012-3.586z" />
                    </svg>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="flex items-center space-x-2">
                    <p class="text-sm font-medium text-gray-900"><%= api_key.name %></p>
                    <% if api_key.active? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Inactive</span>
                    <% end %>
                    <% if api_key.expired? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Expired</span>
                    <% end %>
                  </div>
                  <div class="mt-1 text-xs text-gray-500 space-y-1">
                    <p>Created: <%= api_key.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                    <% if api_key.last_used_at %>
                      <p>Last used: <%= api_key.last_used_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                    <% else %>
                      <p>Never used</p>
                    <% end %>
                    <% if api_key.expires_at %>
                      <p>Expires: <%= api_key.expires_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                    <% else %>
                      <p>Never expires</p>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <%= link_to "View", admin_user_user_api_key_path(@user, api_key), class: "text-blue-600 hover:text-blue-800 text-sm" %>
                <%= link_to "Delete", admin_user_user_api_key_path(@user, api_key), 
                    method: :delete,
                    data: { 
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure you want to delete this API key? This action cannot be undone." 
                    },
                    class: "text-red-600 hover:text-red-800 text-sm" %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-3a1 1 0 011-1h2.586l6.414-6.414a6 6 0 012-3.586z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No API keys</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new API key.</p>
        <div class="mt-6">
          <%= link_to "Create API Key", new_admin_user_user_api_key_path(@user), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>