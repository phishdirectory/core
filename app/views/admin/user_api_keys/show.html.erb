<% content_for :title, "API Key Details" %>

<div class="space-y-6">
  <!-- Header -->
  <div>
    <div class="flex items-center space-x-2 text-sm text-gray-500">
      <%= link_to "API Keys", admin_user_user_api_keys_path(@user), class: "hover:text-gray-700" %>
      <span>›</span>
      <span><%= @api_key.name %></span>
    </div>
    <h1 class="mt-2 text-2xl font-semibold text-gray-900">API Key Details</h1>
    <p class="mt-1 text-sm text-gray-500">
      API key for <%= @user.full_name %> (<%= @user.email %>)
    </p>
  </div>

  <!-- Key Details -->
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-center justify-between mb-5">
        <h3 class="text-lg leading-6 font-medium text-gray-900"><%= @api_key.name %></h3>
        <div class="flex items-center space-x-2">
          <% if @api_key.active? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Inactive</span>
          <% end %>
          <% if @api_key.expired? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Expired</span>
          <% end %>
        </div>
      </div>
      
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Key ID</dt>
          <dd class="mt-1 text-sm text-gray-900 font-mono"><%= @api_key.id %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">User</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= link_to @user.full_name, admin_user_path(@user), class: "text-blue-600 hover:text-blue-800" %>
            <span class="text-gray-500">(<%= @user.email %>)</span>
          </dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @api_key.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Last Used</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @api_key.last_used_at %>
              <%= @api_key.last_used_at.strftime("%B %d, %Y at %I:%M %p") %>
              <span class="text-gray-500">(<%= time_ago_in_words(@api_key.last_used_at) %> ago)</span>
            <% else %>
              <span class="text-gray-500">Never used</span>
            <% end %>
          </dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Expires</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @api_key.expires_at %>
              <%= @api_key.expires_at.strftime("%B %d, %Y at %I:%M %p") %>
              <% if @api_key.expired? %>
                <span class="text-red-600 font-medium">(Expired)</span>
              <% else %>
                <span class="text-gray-500">(in <%= time_ago_in_words(@api_key.expires_at) %>)</span>
              <% end %>
            <% else %>
              <span class="text-gray-500">Never expires</span>
            <% end %>
          </dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm">
            <% if @api_key.api_valid? %>
              <span class="text-green-600 font-medium">Valid</span>
            <% else %>
              <span class="text-red-600 font-medium">Invalid</span>
              <% if @api_key.expired? %>
                (expired)
              <% elsif !@api_key.active? %>
                (inactive)
              <% end %>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Usage Information -->
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Usage Information</h3>
      <div class="mt-2 max-w-xl text-sm text-gray-500">
        <p>This API key can be used to authenticate API requests. Include it in the <code class="bg-gray-100 px-1 rounded">X-API-Key</code> header.</p>
      </div>
      
      <div class="mt-5">
        <h4 class="text-sm font-medium text-gray-900">Example Request</h4>
        <div class="mt-2 bg-gray-900 text-green-400 p-3 rounded text-sm font-mono overflow-x-auto">
          curl -H "X-API-Key: pdat_[your-key-here]" <%= request.base_url %>/api/v1/health
        </div>
      </div>
      
      <div class="mt-5">
        <h4 class="text-sm font-medium text-gray-900">API Endpoints</h4>
        <div class="mt-2 text-sm text-gray-600">
          <ul class="list-disc pl-5 space-y-1">
            <li><code class="bg-gray-100 px-1 rounded">GET /api/v1/health</code> - Health check (no auth required)</li>
            <li><code class="bg-gray-100 px-1 rounded">POST /api/v1/auth/authenticate</code> - Magic link authentication</li>
            <li><code class="bg-gray-100 px-1 rounded">GET /api/v1/users/me</code> - Get current user info</li>
            <li><code class="bg-gray-100 px-1 rounded">GET /api/v1/users/:id</code> - Get user by ID</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-red-900">Danger Zone</h3>
      <div class="mt-2 max-w-xl text-sm text-gray-500">
        <p>Deleting an API key is irreversible. Any applications using this key will immediately lose access.</p>
      </div>
      <div class="mt-5">
        <%= link_to "Delete API Key", admin_user_user_api_key_path(@user, @api_key), 
            method: :delete,
            data: { 
              turbo_method: :delete,
              turbo_confirm: "Are you sure you want to delete this API key? This action cannot be undone and will immediately revoke access for any applications using this key." 
            },
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex justify-end space-x-3">
    <%= link_to "← Back to API Keys", admin_user_user_api_keys_path(@user), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50" %>
  </div>
</div>