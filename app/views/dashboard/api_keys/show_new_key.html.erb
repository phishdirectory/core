<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">

    <!-- Success Header -->
    <div class="text-center mb-8">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
        <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="5 13l4 4L19 7" />
        </svg>
      </div>
      <h2 class="text-3xl font-extrabold text-gray-900">
        API Key Created Successfully!
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Your new API key "<%= @api_key.name %>" has been generated
      </p>
    </div>

    <!-- API Key Display -->
    <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
      
      <!-- Critical Warning -->
      <div class="mb-6 bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              ⚠️ IMPORTANT: Copy Your API Key Now
            </h3>
            <div class="mt-2 text-sm text-red-700">
              This is the only time your API key will be displayed. Make sure to copy and store it securely before leaving this page.
            </div>
          </div>
        </div>
      </div>

      <!-- API Key -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Your API Key
        </label>
        <div class="relative">
          <input type="text" 
                 id="api-key" 
                 value="<%= @raw_key %>" 
                 readonly 
                 class="block w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 font-mono text-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          <button type="button" 
                  onclick="copyToClipboard()" 
                  class="absolute inset-y-0 right-0 flex items-center px-3 text-gray-400 hover:text-gray-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
          </button>
        </div>
        <div id="copy-success" class="hidden mt-2 text-sm text-green-600">
          ✓ Copied to clipboard!
        </div>
      </div>

      <!-- Key Details -->
      <div class="mb-6 bg-gray-50 rounded-md p-4">
        <h3 class="text-sm font-medium text-gray-700 mb-3">Key Details</h3>
        <dl class="space-y-2">
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Name:</dt>
            <dd class="text-sm text-gray-900"><%= @api_key.name %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Created:</dt>
            <dd class="text-sm text-gray-900"><%= @api_key.created_at.strftime("%b %d, %Y at %I:%M %p") %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Expires:</dt>
            <dd class="text-sm text-gray-900">
              <%= @api_key.expires_at ? @api_key.expires_at.strftime("%b %d, %Y") : "Never" %>
            </dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Status:</dt>
            <dd>
              <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                Active
              </span>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Usage Instructions -->
      <div class="mb-6 bg-blue-50 border border-blue-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">
              How to Use Your API Key
            </h3>
            <div class="mt-2 text-sm text-blue-700">
              <p class="mb-2">Include your API key in the Authorization header:</p>
              <code class="block bg-white p-2 rounded text-xs font-mono border">
                Authorization: Bearer <%= @raw_key %>
              </code>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-3">
        <%= link_to dashboard_path, 
            class: "flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="19 12H5m0 0l7 7m-7-7l7-7" />
          </svg>
          Back to Dashboard
        <% end %>
        <a href="https://api.phish.directory/docs" 
           target="_blank"
           class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          View Documentation
        </a>
      </div>
    </div>

  </div>
</div>

<script>
function copyToClipboard() {
  const apiKeyField = document.getElementById('api-key');
  const successMessage = document.getElementById('copy-success');
  
  // Select and copy the text
  apiKeyField.select();
  apiKeyField.setSelectionRange(0, 99999); // For mobile devices
  document.execCommand('copy');
  
  // Show success message
  successMessage.classList.remove('hidden');
  setTimeout(() => {
    successMessage.classList.add('hidden');
  }, 3000);
  
  // Optional: Deselect the text
  apiKeyField.blur();
}

// Auto-select the API key on page load for easy copying
document.addEventListener('DOMContentLoaded', function() {
  const apiKeyField = document.getElementById('api-key');
  apiKeyField.focus();
  apiKeyField.select();
});
</script>