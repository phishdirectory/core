<div id="login_form" class="absolute inset-0 flex items-center justify-center">
<%= form_with(model: user, url: "/login", data: { turbo: true }, local: true, id: "login_form_element") do |f| %>
  <div class="w-full max-w-md bg-white/90 backdrop-blur-sm rounded-xl shadow-2xl border border-white/20 m-10">
    <!-- Card Header -->
    <div class="p-10 pb-6">
      <h2 class="text-3xl font-bold text-gray-900 text-center">Phish Directory</h2>
      <p class="text-gray-600 text-center mt-2">Enter your email to receive a magic link.</p>
    </div>

    <!-- Card Content -->
    <div class="px-10 pb-8 space-y-6">
      <div class="space-y-2">
        <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email,
            class: "w-full px-4 py-3 rounded-lg border border-gray-300 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors placeholder-gray-400",
            placeholder: "you@example.com",
            required: true %>
      </div>


      <!-- Submit Button -->
      <div>
        <%= f.submit "Send Magic Link",
            class: "w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer" %>
      </div>

      <div class="text-center">
        <p class="text-sm text-gray-600">
          Don't have an account?
          <%= link_to "Sign up", signup_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
        </p>
      </div>
    </div>
  </div>
<% end %>
</div>
